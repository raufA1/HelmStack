# HelmStack Helmfile - hs runner interface
# Usage: alias hs="make -f Helmfile"

SHELL := /usr/bin/env bash
.SHELLFLAGS := -eo pipefail -c
.DEFAULT_GOAL := help

# hs-specific variables
HS_VERSION := 2.0.0
HELMSTACK_ROOT := $(shell pwd)

DOCS_DIR      ?= workspace
INCOMING_DIR  ?= $(DOCS_DIR)/incoming
PROCESSED_DIR ?= $(DOCS_DIR)/processed
PLANS_DIR     ?= $(DOCS_DIR)/plans
RESEARCH_DIR  ?= $(DOCS_DIR)/research
SNAP_DIR      ?= snapshots
MEM_DIR       ?= memory

NAME ?= $(notdir $(CURDIR))
DESC ?= Project initialized via HelmStack
DOC  ?=
GLOB ?=

# Aliases for common commands
go: start ## ğŸš€ Alias for 'start' - quick project initialization
plan: ## ğŸ§­ Alias for 'fix' - refresh planning documents
	@$(MAKE) fix
save: snapshot ## ğŸ’¾ Alias for 'snapshot' - create session snapshot

start: ## ğŸ”¥ Full setup + smart start (optional DOC=path)
	@mkdir -p "$(INCOMING_DIR)" "$(PROCESSED_DIR)" "$(PLANS_DIR)" "$(RESEARCH_DIR)" "$(SNAP_DIR)"
	@if [ -n "$(DOC)" ]; then cp "$(DOC)" "$(INCOMING_DIR)/" && echo "âœ… Added: $(DOC)"; fi
	@if [ ! -d .git ]; then git init && echo "â„¹ï¸ git init"; fi
	@chmod +x scripts/*.sh 2>/dev/null || true
	@chmod +x scripts/*.py 2>/dev/null || true
	@if [ ! -f .helmstack_seeded ]; then pre-commit install || true; touch .helmstack_seeded; fi
	@bash scripts/smart_start.sh "$(NAME)" "$(DESC)" "$(DOCS_DIR)" "$(INCOMING_DIR)" "$(PLANS_DIR)"
	@echo "â†’ Next: make fix | make work | make done"

fix: ## ğŸ§­ Refresh plan (generates STATUS.md, NEXT_STEPS.md)
	@bash scripts/run_analyzer.sh "$(INCOMING_DIR)" "$(PLANS_DIR)"
	@bash scripts/ai_memory_refresh.sh "$(PLANS_DIR)" "$(MEM_DIR)"

work: ## ğŸ¯ Build FOCUS_LIST from NEXT_STEPS
	@bash scripts/extract_next_steps.sh "$(PLANS_DIR)"
	@bash scripts/ai_memory_refresh.sh "$(PLANS_DIR)" "$(MEM_DIR)"

done: ## ğŸŒ… End of day (snapshot + commit/tag/push; safe if no HEAD yet)
	@bash scripts/ai_memory_refresh.sh "$(PLANS_DIR)" "$(MEM_DIR)"
	@$(MAKE) eod



resume: ## FOCUS_LIST from NEXT_STEPS
	@bash scripts/extract_next_steps.sh "$(PLANS_DIR)"

eod: ## âœ… End of day - snapshot + git commit/tag/push (safe with no HEAD)
	@bash scripts/eod.sh "$(SNAP_DIR)" "$(PLANS_DIR)"

snapshot: ## Diff/log snapshot
	@bash scripts/snapshot.sh "$(SNAP_DIR)"

ask:   ## ğŸ” Start research thread (TOPIC="...")
	@bash scripts/research.sh ask "$(RESEARCH_DIR)" "$(TOPIC)"
check: ## ğŸ§ª Summarize findings for review
	@bash scripts/research.sh check "$(RESEARCH_DIR)"
yes:   ## âœ… Approve proposal
	@bash scripts/research.sh yes "$(RESEARCH_DIR)" "$(PLANS_DIR)" "$(MEM_DIR)"
no:    ## âœï¸ Request changes
	@bash scripts/research.sh no "$(RESEARCH_DIR)"
end:   ## ğŸ—‚ Finalize research
	@bash scripts/research.sh end "$(RESEARCH_DIR)"

build: ## ğŸ›  Docâ†’README synthesizer
	@python3 scripts/autoplan.py "$(INCOMING_DIR)" "$(PLANS_DIR)" || true
ideas: ## ğŸ’¡ Extract TODOs from docs
	@python3 scripts/autoplan.py --ideas "$(INCOMING_DIR)" "$(PLANS_DIR)" || true
epics: ## ğŸ¯ Extract EPICs from docs
	@python3 scripts/autoplan.py --epics "$(INCOMING_DIR)" "$(PLANS_DIR)" || true
milestones: ## ğŸ† Extract MILESTONEs from docs
	@python3 scripts/autoplan.py --milestones "$(INCOMING_DIR)" "$(PLANS_DIR)" || true
analyze: ## ğŸ” Analyze documents (ANALYZER=markdown|risk|scope PATH=file/dir)
	@python3 scripts/analyze.py "$(PATH)" $(if $(ANALYZER),--analyzers $(ANALYZER),) || echo "Usage: make analyze PATH=workspace/incoming"
analyzers: ## ğŸ“‹ List available analyzers
	@python3 scripts/analyze.py --list-analyzers workspace/incoming
template: ## ğŸ“ Generate template (TYPE=issue|todo|research|epic FILE=output.md)
	@bash scripts/templates.sh "$(TYPE)" "$(FILE)" || echo "Usage: make template TYPE=issue FILE=my-issue.md"
adr-new: ## ğŸ“‹ Create new ADR (TITLE="Decision title")
	@bash scripts/adr.sh new "$(TITLE)" || echo "Usage: make adr-new TITLE='Use PostgreSQL for database'"
adr-list: ## ğŸ“‹ List all ADRs
	@bash scripts/adr.sh list
adr-accept: ## âœ… Accept ADR (NUM=001)
	@bash scripts/adr.sh accept "$(NUM)" || echo "Usage: make adr-accept NUM=001"
adr-status: ## ğŸ“Š Show ADR status (NUM=001)
	@bash scripts/adr.sh status "$(NUM)" || echo "Usage: make adr-status NUM=001"
analytics: ## ğŸ“Š Show today's session analytics
	@python3 scripts/analytics.py || echo "No session data available"
trends: ## ğŸ“ˆ Show productivity trends (DAYS=7)
	@python3 scripts/analytics.py --trends $(or $(DAYS),7) || echo "Usage: make trends DAYS=7"
extract: ## ğŸ“„ Extract text from PDF/DOCX (FILE=input.pdf OUTPUT=output.md)
	@python3 scripts/extract_text.py "$(FILE)" $(if $(OUTPUT),-o "$(OUTPUT)",) || echo "Usage: make extract FILE=doc.pdf OUTPUT=doc.md"
setup: ## âš™ï¸ GitHub bootstrap (via gh, optional)
	@bash scripts/bootstrap.sh || true

status: ## ğŸ“Š Show status
	@sed -n '1,80p' "$(PLANS_DIR)/STATUS.md" 2>/dev/null || echo "No STATUS.md yet"
next:   ## ğŸ“Œ Show next steps
	@sed -n '1,80p' "$(PLANS_DIR)/NEXT_STEPS.md" 2>/dev/null || echo "No NEXT_STEPS.md yet"
focus:  ## ğŸ¯ Show focus list
	@sed -n '1,80p' "$(PLANS_DIR)/FOCUS_LIST.md" 2>/dev/null || echo "No FOCUS_LIST.md yet"
memory: ## ğŸ§  Show AI memory summary
	@bash scripts/ai_memory_refresh.sh "$(PLANS_DIR)" "$(MEM_DIR)" "$(RESEARCH_DIR)"
	@cat "$(MEM_DIR)/MEMORY.md" 2>/dev/null || echo "No memory summary yet"
context: ## ğŸ¯ Show quick context
	@bash scripts/ai_memory_refresh.sh "$(PLANS_DIR)" "$(MEM_DIR)" "$(RESEARCH_DIR)" >/dev/null
	@cat "$(MEM_DIR)/CONTEXT.md" 2>/dev/null || echo "No context yet"
log:    ## ğŸ“œ Show session log head
	@sed -n '1,120p' SESSION_LOG.md 2>/dev/null || echo "No SESSION_LOG yet"

clean:  ## ğŸ§¹ Clean generated
	@rm -rf "$(SNAP_DIR)"/* 2>/dev/null || true
	@find "$(PLANS_DIR)" -name "FOCUS_LIST.md" -delete 2>/dev/null || true
	@echo "Cleaned snapshots and focus list."

commit: ## ğŸ“ Commit changes (MSG="...")
	@[ -n "$(MSG)" ] || (echo "MSG is required: make commit MSG='...'" && exit 1)
	@git add -A && git commit -m "$(MSG)"
push:   ## â¬†ï¸ Push and tags
	@git push || true
	@git push --tags || true

help:   ## ğŸ“– Show colorful help
	@bash scripts/help.sh

version: ## ğŸ“‹ Show hs version
	@echo "ğŸš€ hs (HelmStack) v$(HS_VERSION)"
	@echo "Document-first, AI-powered project flow"
	@echo "Repository: https://github.com/raufA1/HelmStack"
	@echo "Runner: hs (Helmfile-based)"

fix-lint: ## ğŸ”§ Fix linting issues
	@echo "ğŸ”§ Running ruff with auto-fix..."
	@ruff check scripts/ --fix || echo "Install ruff: pip install ruff"
	@echo "âœ… Linting fixes applied"

fix-format: ## ğŸ¨ Fix code formatting
	@echo "ğŸ¨ Running black formatter..."
	@black scripts/ || echo "Install black: pip install black"
	@echo "âœ… Code formatting applied"

fix-yaml: ## ğŸ“ Fix YAML formatting
	@echo "ğŸ“ Checking YAML files..."
	@yamllint .github/workflows/ .pre-commit-config.yaml || echo "Install yamllint: pip install yamllint"
	@echo "âœ… YAML files checked"

init: ## ğŸ†• Initialize new hs project repository (NAME="ProjectName" DESC="Description" PRIVATE=true/false)
	@echo "ğŸ†• Initializing new hs project repository..."
	@[ -n "$(NAME)" ] || (echo "âŒ NAME is required: hs init NAME='MyProject' DESC='Description'" && exit 1)
	@mkdir -p "$(NAME)"
	@cp -r . "$(NAME)/" 2>/dev/null || true
	@cd "$(NAME)" && rm -rf .git
	@cd "$(NAME)" && git init
	@cd "$(NAME)" && $(MAKE) -f Helmfile start NAME="$(NAME)" DESC="$(DESC)"
	@echo "âœ… New hs project '$(NAME)' initialized"
	@echo "ğŸ“‚ Next: cd $(NAME) && hs help"

repo: ## ğŸ—ï¸ Create GitHub repository (NAME="RepoName" DESC="Description" PRIVATE=true/false)
	@echo "ğŸ—ï¸ Creating GitHub repository..."
	@[ -n "$(NAME)" ] || (echo "âŒ NAME is required: hs repo NAME='MyProject' DESC='Description'" && exit 1)
	@if [ "$(PRIVATE)" = "true" ]; then \
		gh repo create --private $(NAME) --description "$(DESC)" --clone=false; \
	else \
		gh repo create --public $(NAME) --description "$(DESC)" --clone=false; \
	fi
	@git remote add origin git@github.com:$(shell gh auth status | grep 'Logged in' | cut -d' ' -f6)/$(NAME).git || true
	@echo "âœ… Repository '$(NAME)' created and remote added"

publish: ## ğŸš€ Initial push to GitHub (creates main branch)
	@echo "ğŸš€ Publishing to GitHub..."
	@git add -A
	@git commit -m "Initial commit via hs publish" || echo "â„¹ï¸  Nothing to commit"
	@git branch -M main
	@git push -u origin main
	@echo "âœ… Published to GitHub on main branch"

pr: ## ğŸ“‹ Create Pull Request (TITLE="PR Title" BODY="PR Description")
	@echo "ğŸ“‹ Creating Pull Request..."
	@[ -n "$(TITLE)" ] || (echo "âŒ Usage: hs pr TITLE='Feature XYZ' BODY='Description of changes'" && exit 1)
	@gh pr create --title "$(TITLE)" --body "$(BODY)"
	@echo "âœ… Pull Request created"


blockers: ## ğŸš« Show blockers from analysis
	@python3 scripts/analyze.py --blockers workspace/incoming workspace/plans
	@cat workspace/plans/BLOCKERS.md 2>/dev/null || echo "No blockers identified"

productivity: ## ğŸ“Š Real productivity metrics
	@echo "ğŸ“Š Productivity Metrics"
	@python3 scripts/analytics.py --productivity || echo "No session data available"

timeline: ## ğŸ“… Project timeline
	@echo "ğŸ“… Project Timeline"
	@if [ -d .git ]; then git log --oneline --graph --decorate; else echo "Not a git repository"; fi

dependencies: ## ğŸ”— Dependency analysis
	@echo "ğŸ”— Analyzing dependencies..."
	@python3 scripts/analyze.py --dependencies workspace/incoming workspace/plans
	@cat workspace/plans/DEPENDENCIES.md 2>/dev/null || echo "No dependencies analyzed"

bump-patch: ## ğŸ”¢ Bump patch version (1.0.0 â†’ 1.0.1)
	@bash scripts/bump_version.sh patch

bump-minor: ## ğŸ”¢ Bump minor version (1.0.0 â†’ 1.1.0)
	@bash scripts/bump_version.sh minor

bump-major: ## ğŸ”¢ Bump major version (1.0.0 â†’ 2.0.0)
	@bash scripts/bump_version.sh major

bump-dry: ## ğŸ” Dry run version bump (shows what would change)
	@bash scripts/bump_version.sh patch dry-run

auto: ## ğŸ¤– Project automation workflows (WORKFLOW=full-cycle|health-check|project-init|release-prep)
	@bash scripts/project_automation.sh $(or $(WORKFLOW),help)

full-cycle: ## ğŸ”„ Complete HelmStack workflow (fix + work + memory + analytics)
	@bash scripts/project_automation.sh full-cycle

health: ## ğŸ¥ Project health check
	@bash scripts/project_automation.sh health-check

.PHONY: start go fix work done save plan resume eod snapshot ask check yes no end build ideas setup status next focus log clean commit push help version fix-lint fix-format fix-yaml init repo publish pr analyzers blockers productivity timeline dependencies bump-patch bump-minor bump-major bump-dry auto full-cycle health
